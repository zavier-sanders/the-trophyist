	<script type="text/javascript">
		$(".selection-1").select2({
			minimumResultsForSearch: 20,
			dropdownParent: $('#dropDownSelect1')
		});

		$(".selection-2").select2({
			minimumResultsForSearch: 20,
			dropdownParent: $('#dropDownSelect2')
		});

		$("#contact-form").submit(function(event){
        let form = $('#contact-form');
        let message = $('.success-message');
        
        event.preventDefault(); //prevent default action 
        var post_url = "https://smlw9fh6jl.execute-api.us-east-1.amazonaws.com/prod/theTrophyist-contactUs"; //get form action url
        var form_data = {
            Name: $(this).find('input[name="name"]').val(),
            Email: $(this).find('input[name="email"]').val(),
            Phone: $(this).find('input[name="phone-number"]').val(),
            Subject: 'Contact Us',
            Body: $.trim($("#Body").val()) //$(this).find('input[name="Body"]').text(),
        }
        
        var data = JSON.stringify(form_data);
        console.log(form_data);
        $.post( post_url, data, function( response ) {
          console.log(response);
            form.css({ 'display': "none" });
            message.css({ 'display': "inline-block" });
        });
    });
	</script>
